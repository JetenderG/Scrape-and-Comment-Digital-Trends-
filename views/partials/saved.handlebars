{{#each savedarticles}}

<div class="row articlerow" data-id="{{this._id}}">
    <strong>Title :</strong><p class=" titleS">{{this.title}}</p>
    <p class="sumS"><strong>Summary :</strong>{{this.summary}}</p>
    <a href="{{this.link}}">
        <p class="linkS">Link to the main article</p>

    </a>





    <button type="button" class="btn btn-primary" id="populate" data-toggle="modal" data-target="#exampleModal" data-id={{this._id}}>
    </button>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="commentSave">Add a Comment</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="container commSection  {{this.id}}S" data-id="{{this._id}}">

                    </div>
                    <form class="submitComment" action="/newcomment" method="POST">
                        <input class="idpopS" name="id" value="{{this._id}}">
                        <textarea class="textareaS" id="textComment" name="comments">































</textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="add">Save changes</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

</div>
{{/each}}